<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.frontendjavafx.controller.RegistrationController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Registration Form" GridPane.columnSpan="2" style="-fx-font-size: 18px;" />

    <Label text="User Name:" GridPane.rowIndex="1" />
    <TextField fx:id="userNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Password:" GridPane.rowIndex="2" />
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="API:" GridPane.rowIndex="3" />
    <TextField fx:id="apiTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="API Key:" GridPane.rowIndex="4" />
    <TextField fx:id="apiKeyTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Virtual Agent:" GridPane.rowIndex="5" />
    <CheckBox fx:id="virtualAgentCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Button text="Register" onAction="#onClick_registration" GridPane.columnSpan="2" GridPane.rowIndex="6" />
</GridPane>